<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="BluetoothClipboard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BluetoothClipboard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="BluetoothClipboard">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,20,20,20">

        <Button x:Name="myButton" Click="myButton_Click" Margin="0,10,0,10">Click Me</Button>
        <ListView x:Name="bluetoothDeviceList" 
                  Visibility="Collapsed"
                  BorderThickness="1" 
                  Background="White"
                  BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"  
                  Width="350"
                  Height="100"
                  HorizontalAlignment="Left"/>

    </StackPanel>
</Window>
